<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             xmlns:viewModels="clr-namespace:POC_AvaloniaMauiApp01.ViewModels"
             x:Class="POC_AvaloniaMauiApp01.Maui.BarcodeView"
             x:DataType="viewModels:QRCodeViewModel">
    <controls:BarcodeGeneratorView
        HorizontalOptions="Center"
        VerticalOptions="Center"
        HeightRequest="100"
        WidthRequest="100"
        ForegroundColor="DarkBlue"
        Format="{Binding ScannedQrCodeFormat}"
        Value="{Binding ScannedQrCode}"
        BarcodeMargin="1" />
</ContentView>